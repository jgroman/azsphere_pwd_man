@page
@model AzurePasswordManager.Pages.SiteLoginCreateModel
@{
    ViewData["Title"] = "Add Entry";
}

<h1>Add Entry</h1>

<div asp-validation-summary="All"></div>
<form method="post" class="col-sm-6">

    <div class="form-group row">
        <label asp-for="SiteLogin.Name" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="SiteLogin.Name" class="form-control" />
        </div>

        <span asp-validation-for="SiteLogin.Name"></span>
    </div>

    <div class="form-group row">
        <label asp-for="SiteLogin.Username" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-7">

            <input asp-for="SiteLogin.Username" class="form-control" />
        </div>
        <span asp-validation-for="SiteLogin.Username"></span>
    </div>

    <div class="form-group row">
        <label asp-for="SiteLogin.Password" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-7">

            <input type="password" asp-for="SiteLogin.Password" class="form-control" />
        </div>
        <span asp-validation-for="SiteLogin.Password"></span>
    </div>

    <div class="form-group row">
        <label asp-for="SiteLogin.Url" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-7">

            <input type="url" asp-for="SiteLogin.Url" class="form-control" />
        </div>
        <span asp-validation-for="SiteLogin.Url"></span>
    </div>

    <div class="col-sm-7 offset-sm-3">
        <button class="btn btn-primary" id="submit">Submit</button>
    </div>

</form>

@section scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")

}
