@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var siteLogin in Model.SiteLogins) {
                <tr>
                    <td class="clicktd" id="clicktd-@siteLogin.Id">@siteLogin.Name <span id="result-@siteLogin.Id"></span></td>
                    <td>
                        <button type="submit" asp-page-handler="send"
                                asp-route-id="@siteLogin.Id">
                            send
                        </button>
                        <a asp-page="./SiteLoginEdit" asp-route-id="@siteLogin.Id">edit</a>
                        <button type="submit" asp-page-handler="delete"
                                asp-route-id="@siteLogin.Id">
                            delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

@section scripts{
    <script>
        $('td.clicktd').click(function () {
            var id = $(this).attr('id');
            alert("CLICK");
        });
    </script>
}