@page
@model AzurePasswordManager.Pages.ConfigModel
@{
    ViewData["Title"] = "Configuration";
}

<h1>Configuration</h1>

<div asp-validation-summary="All"></div>
<form method="post" class="col-sm-12">

    <div asp-validation-summary="All" class="offset-sm-1"></div>

    <div class="form-group row">
        <label asp-for="ConnectionString.IotHubService" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="ConnectionString.IotHubService"
                   value="@Model.ConnectionString.IotHubService" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ConnectionString.AzureSphereDevice" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="ConnectionString.AzureSphereDevice"
                   value="@Model.ConnectionString.AzureSphereDevice" />
        </div>
    </div>

    <div class="col-sm-1 offset-sm-1">
        <button class="btn btn-primary" id="submit">Submit</button>
    </div>
</form>

@section scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
