@page "{id?}/{handler?}"
@model SpherePasswordManager.Pages.EditModel
@{
    ViewData["Title"] = "Item";
}

<div class="col-lg-6">
    <div id="form" style="max-width: 280px;">
        <form class="form-horizontal" method="post">
            <input type="hidden" asp-for="Item.Id" />

            <div class="form-group">
                <label asp-for="Item.Name"></label>
                <input type="text" asp-for="Item.Name" class="form-control input-sm" />
                <small class="form-text text-muted"><span asp-validation-for="Item.Name"></span></small>
            </div>

            <div class="form-group">
                <label for="Username">Username</label>
                <input type="text" asp-for="Item.Username" class="form-control input-sm" />
                <small class="form-text text-muted"><span asp-validation-for="Item.Username"></span></small>
            </div>

            <div class="form-group">
                <label for="Password">Password</label>
                <input type="text" asp-for="Item.Password" class="form-control input-sm" />
                <small class="form-text text-muted"><span asp-validation-for="Item.Password"></span></small>
            </div>

            <div class="form-group">
                <label for="Url">Url</label>
                <input type="text" asp-for="Item.Uri" class="form-control input-sm" />
                <small class="form-text text-muted"><span asp-validation-for="Item.Uri"></span></small>
            </div>

            <div class="form-group">
                @{ var submit_btn_text = "Update"; }
                @if (@Model.Item.Id != 0)
                {
                    <a asp-page-handler="Delete" asp-route-id="@Model.Item.Id" class="btn btn-danger float-left">Delete</a>
                    submit_btn_text = "Submit";
                }

                <button asp-page-handler="Submit" asp-route-id="@Model.Item.Id" class="btn btn-primary float-right">@submit_btn_text</button>
                <a asp-page="./Index" class="btn btn-outline-secondary float-right mr-1">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}